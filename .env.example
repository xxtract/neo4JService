# Neo4j Configuration
# Copy this file to .env and update with your values for production

# ===== CRITICAL: SECURITY =====
# Change this to a strong password for production!
NEO4J_PASSWORD=ChangeThisPassword123!

# ===== PORT CONFIGURATION =====
# Neo4j Browser port (HTTP)
NEO4J_BROWSER_PORT=7474

# Neo4j Bolt driver port (for applications, n8n, etc.)
NEO4J_BOLT_PORT=7687

# ===== MEMORY CONFIGURATION =====
# Adjust based on your server resources
# Page cache size - typically 1/4 to 1/2 of available RAM
NEO4J_PAGECACHE_SIZE=512M

# Heap size - balance between page cache and heap
NEO4J_HEAP_SIZE=512M

# ===== LOGGING =====
# Log levels: DEBUG, INFO, WARN, ERROR
NEO4J_LOG_LEVEL=INFO

# ===== FEATURE TOGGLES =====
# Enable HTTP endpoint
NEO4J_HTTP_ENABLED=true

# Enable Bolt protocol
NEO4J_BOLT_ENABLED=true

# ===== DOCKER RESOURCE LIMITS =====
# CPU limits (e.g., "2" for 2 cores)
DOCKER_CPUS=2
DOCKER_CPUS_RESERVE=1

# Memory limits
DOCKER_MEMORY=1G
DOCKER_MEMORY_RESERVE=512M

# ===== OPTIONAL: EXTENSIONS =====
# For n8n integration (if needed)
# N8N_EXTENSIONS_INSTALL=n8n-nodes-neo4j
